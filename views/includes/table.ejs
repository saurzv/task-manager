<table class="table">
    <thead>
        <tr>
            <th scope="col">All Tasks</th>
        </tr>
    </thead>
    <tbody>
        <% for(var i=0; i < tasks.length; ++i){ %>
        <tr>
            <% if (tasks[i].fin == true) { %>
            <td>
                <span style="color: black;text-decoration: line-through;">
                    <span style="color: #b1b1b1;">
                    <%- tasks[i].task %> </span>
                    </span>
            </td>
            <% } else { %>
            <td><%- tasks[i].task %></td>
            <% } %>
            <td>
                <a
                    class="btn btn-light btn-sm edit-btn"
                    href="/update_task?id=<%= tasks[i]._id %> "
                >
                    <i class="bi bi-pencil-square"></i>
                </a>
                <a
                    class="btn btn-light btn-sm del-btn"
                    task-id="<%= tasks[i]._id %>"
                >
                    <i class="bi bi-trash3"></i>
                </a>
            </td>
        </tr>
        <% } %>
    </tbody>
</table>
